<h1> My Tasks </h1>

<% @tasks.each do |task| %>
<div>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete", delete_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</div>
<% end %>
<br>
<%= link_to "Add a new task", new_path %>


